<div class="modal fade" id="modal-check-device" role="dialog">
    <div class="modal-dialog modal-xl">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thiết bị đang có trong phòng</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Tên thiết bị</td>
                            <td>Đơn vị</td>
                            <td>Giá</td>
                            <td>Giá bồi thường</td>
                            <td>Số lượng</td>
                            <td>Trạng thái</td>
                            <td>Bảo hành</td>
                        </tr>
                    </thead>
                    <tbody id="tbl-motel-check-device">
                    </tbody>
                </table>

                <script id="data-motel-device" type="text/template">
                    <tr>
                        <td>
                            <button class="btn btn-primary btn-edit-specific-device" data-idMotel="{{ID_Motel}}" data-idDevice="{{ID_Device}}">Sửa thiết bị</button>
                        </td>
                        <td>{{Name}}</td>
                        <td>{{Unit}}</td>
                        <td>{{Price}}</td>
                        <td>{{CompensationPrice}}</td>
                        <td>{{Quantity}}</td>
                        <td>{{StatusDevice}}</td>
                        <td>{{{Guarantee}}}</td>
                    </tr>
                </script>

            </div>

        </div>

    </div>
</div>
